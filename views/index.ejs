<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Yozana Classes Ads</title>
    <link rel="stylesheet" href="./bootstrap.min.css" />
    <script async src="https://www.google.com/adsense/search/ads.js"></script>
    <script type="text/javascript">
      (function (g, o) {
        (g[o] =
          g[o] ||
          function () {
            (g[o]["q"] = g[o]["q"] || []).push(arguments);
          }),
          (g[o]["t"] = 1 * new Date());
      })(window, "_googCsa");
    </script>
    <style>
      html,
      body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden;
      }
      .full-page-overlay {
        background-image: url("<%= image %>");
        background-size: cover;
        background-position: center;
        width: 100vw;
        height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 10;
        opacity: 1;
        pointer-events: none;
      }
      .container-content {
        position: relative;
        z-index: 5;
      }
    </style>
  </head>
  <body>
    <div class="full-page-overlay"></div>
    <div class="container-content">
      <div class="container py-3">
        <div id="afscontainer1"></div>
        <div id="afscontainer2"></div>
      </div>
      <script type="text/javascript">
        const pageOptions = {
          pubId: "partner-pub-9367421583192509",
          adsafe: "medium",
          styleId: "7970653824",
          adtest: "on",
          relatedSearchTargeting: "query",
          query: "<%= query %>", // Inject dynamic query
          resultsPageBaseUrl: "http://localhost:3000/result.php",
          resultsPageQueryParam: "q",
        };

        const adblock = {
          container: "afscontainer1",
          number: 4,
          width: 1920,
        };

        const rsblock = {
          container: "afscontainer2",
          relatedSearches: 10,
          width: 1920,
        };

        _googCsa("ads", pageOptions, adblock, rsblock);
      </script>
    </div>
  </body>
</html>
